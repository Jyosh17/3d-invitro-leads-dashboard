import streamlit as st
import pandas as pd

# Title
st.title("3D In-Vitro Lead Dashboard ðŸ§¬")

# Load CSV
df = pd.read_csv("data/leads_dashboard.csv")

# Display interactive table
st.dataframe(df)

# Download button
csv_data = df.to_csv(index=False)
st.download_button(
    label="Download Leads as CSV",
    data=csv_data,
    file_name="leads_dashboard.csv",
    mime="text/csv"
)
